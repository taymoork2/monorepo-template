{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"allowJs": true,
		"declaration": false,
		"declarationMap": false,
		"incremental": true,
		"jsx": "preserve",
		"lib": ["dom", "dom.iterable", "esnext"],
		"module": "esnext",
		"noEmit": true,
		"resolveJsonModule": true,
		"target": "es5",
		"plugins": [{ "name": "typescript-plugin-css-modules" }]
	}
}
